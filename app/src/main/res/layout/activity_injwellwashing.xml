                <ImageView
                    android:id="@+id/iv_water_delete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/ic_delete"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>



            <!--提交与重置-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <Button
                    android:id="@+id/bt_zsj_xj_submit"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/corner_bluebg"
                    android:text="提交"
                    android:textSize="26sp"
                    android:padding="1dp"
                    android:textColor="@android:color/white"
                    android:clickable="true"
                    />
                <Button
                    android:id="@+id/bt_zsj_xj_reset"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/corner_greenbg"
                    android:text="重置"
                    android:textSize="26sp"
                    android:padding="1dp"
                    android:textColor="@android:color/white"
                    android:layout_toRightOf="@id/bt_zsj_xj_submit"
