<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--引入首页title-->
    <include layout="@layout/activity_title_view"/>
    <!--水井洗井-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/light_gray">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水井洗井"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <!--表格录入界面-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_white_frame">
                <TextView
                    android:id="@+id/tv_zsj_xj_wellname"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:padding="1dp"
                    android:text="洗井井号"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/et_zsj_xj_wellname"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_zsj_xj_wellname"
                    android:background="@drawable/transparent"
                    android:ems="19"
                    android:hint="请输入洗井井号"
                    android:inputType="text"
                    android:padding="1dp"
                    android:textSize="20sp" />
                <ImageView
                    android:id="@+id/iv_zsj_xj_del_wellname"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/text_del"
                    android:visibility="gone"
                    android:clickable="true"/>
            </RelativeLayout>
            <!--洗井方式-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_white_frame">
                <TextView
                    android:id="@+id/tv_zsj_xj_method"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:padding="1dp"
                    android:text="洗井方式"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/et_zsj_xj_method"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_zsj_xj_method"
                    android:background="@drawable/transparent"
                    android:ems="19"
                    android:hint="请输入洗井方式"
                    android:inputType="text"
                    android:padding="1dp"
                    android:textSize="20sp" />
                <ImageView
                    android:id="@+id/iv_zsj_xj_del_method"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/text_del"
                    android:visibility="gone"
                    android:clickable="true"/>
            </RelativeLayout>
            <!--注入介质-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_white_frame">
                <TextView
                    android:id="@+id/tv_zsj_xj_injmedium"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:padding="1dp"
                    android:text="注入介质"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/et_zsj_xj_injmedium"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_zsj_xj_injmedium"
                    android:background="@drawable/transparent"
                    android:ems="19"
                    android:hint="请输入注入介质"
                    android:inputType="text"
                    android:padding="1dp"
                    android:textSize="20sp" />
                <ImageView
                    android:id="@+id/iv_zsj_xj_del_injmedium"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/text_del"
                    android:visibility="gone"
                    android:clickable="true"/>
            </RelativeLayout>
            <!--洗井队伍-->
