                    android:visibility="gone"
                    android:clickable="true"/>
            </RelativeLayout>
            <!--油压-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_white_frame">
                <TextView
                    android:id="@+id/tv_zsj_xj_olipress"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:padding="1dp"
                    android:text="油压"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/et_zsj_xj_oilpress"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_zsj_xj_olipress"
                    android:background="@drawable/transparent"
                    android:ems="19"
                    android:hint="请输入油压"
                    android:inputType="text"
                    android:padding="1dp"
                    android:textSize="20sp" />
                <ImageView
                    android:id="@+id/iv_zsj_xj_del_olipress"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/text_del"
                    android:visibility="gone"
                    android:clickable="true"/>
            </RelativeLayout>
            <!--套压-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_white_frame">
                <TextView
                    android:id="@+id/tv_zsj_xj_casingpress"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:padding="1dp"
                    android:text="套压"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/et_zsj_xj_casingpress"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_zsj_xj_casingpress"
                    android:background="@drawable/transparent"
                    android:ems="19"
                    android:hint="请输入套压"
                    android:inputType="text"
                    android:padding="1dp"
                    android:textSize="20sp" />
                <ImageView
                    android:id="@+id/iv_zsj_xj_del_casingpress"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/text_del"
                    android:visibility="gone"
                    android:clickable="true"/>
            </RelativeLayout>
            <!--入场时间-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_white_frame">
                <TextView
                    android:id="@+id/tv_zsj_xj_comingtime"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:padding="1dp"
                    android:text="入场时间"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/et_zsj_xj_comingtime"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_zsj_xj_comingtime"
                    android:background="@drawable/transparent"
                    android:ems="19"
                    android:hint="请点击选择入场时间"
                    android:inputType="text"
                    android:padding="1dp"
                    android:textSize="20sp"
                    android:clickable="true"/>
            </RelativeLayout>
            <!--洗井时间-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_white_frame">
                <TextView
                    android:id="@+id/tv_zsj_xj_washingtime"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:padding="1dp"
                    android:text="洗井时间"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/et_zsj_xj_washingtime"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_zsj_xj_washingtime"
                    android:background="@drawable/transparent"
                    android:ems="19"
                    android:hint="请点击选择洗井时间"
                    android:inputType="text"
                    android:padding="1dp"
                    android:textSize="20sp"
                    android:clickable="true"/>
            </RelativeLayout>
            <!--离开时间-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_white_frame">
                <TextView
                    android:id="@+id/tv_zsj_xj_leavetime"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:padding="1dp"
                    android:text="离开时间"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/et_zsj_xj_leavetime"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_zsj_xj_leavetime"
                    android:background="@drawable/transparent"
                    android:ems="19"
                    android:hint="请点击选择离开时间"
                    android:inputType="text"
                    android:padding="1dp"
                    android:textSize="20sp"
                    android:clickable="true"/>
            </RelativeLayout>
            <!--现场监督人-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_white_frame">
                <TextView
                    android:id="@+id/tv_zsj_xj_supervior"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:padding="1dp"
                    android:text="现场监督人"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/et_zsj_xj_supervior"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_zsj_xj_supervior"
                    android:background="@drawable/transparent"
                    android:ems="19"
                    android:hint="请输入现场监督人"
                    android:inputType="text"
                    android:padding="1dp"
                    android:textSize="20sp" />
                <ImageView
                    android:id="@+id/iv_zsj_xj_del_supervior"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/text_del"
                    android:visibility="gone"
                    android:clickable="true"/>
            </RelativeLayout>
            <!--洗井现场照片-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_white_frame">
                <TextView
                    android:id="@+id/tv_zsj_xj_washingphoto"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:padding="1dp"
                    android:text="洗井现场照片"
                    android:textSize="20sp" />
                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp">
                    <ImageView
                        android:id="@+id/iv_washing_camerapicdefault"
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/uploadimage"
                        android:scaleType="center"
                        android:src="@mipmap/ic_camera"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/iv_washing_cameraPic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_washing_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/ic_delete"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>
            <!--三个阶段洗井排量-->
