<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">
    <!--加入首页title-->
    <include layout="@layout/activity_title_view"/>
    <!--系统模块-->
    <!--压裂模块-->
    <RelativeLayout
        android:id="@+id/module_crushing"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/corner_redbg"
        android:padding="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:clickable="true">
        <ImageView
            android:id="@+id/module_crushing_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/crusing_icon"
            />
        <TextView
            android:id="@+id/module_crushing_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/module_crushing_img"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="压裂"
            android:textSize="35sp"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>
    <!--下面布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp">
        <RelativeLayout
            android:id="@+id/module_gz_manage"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:background="@drawable/corner_bluebg"
            android:padding="15dp"
            android:clickable="true">
            <ImageView
                android:id="@+id/module_measure_img"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/gjmanage"
                />
            <TextView
                android:id="@+id/module_measure_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/module_measure_img"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="管柱管理"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                />
        </RelativeLayout>
        <!--酸化-->
        <RelativeLayout
            android:id="@+id/module_acidate"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/corner_greenbg"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:clickable="true">
            <ImageView
                android:id="@+id/module_injwell_img"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/measure_icon"
                />
            <TextView
                android:id="@+id/module_injwell_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/module_injwell_img"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="酸化"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                />
        </RelativeLayout>
    </LinearLayout>
    <!--水井措施模块-->
    <RelativeLayout
        android:id="@+id/module_waterwell_measure"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/corner_orangebg"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:clickable="true">
        <ImageView
            android:id="@+id/module_waterwell_icon"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/waterwellmeasure"
            />
        <TextView
            android:id="@+id/module_waterwell_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/module_waterwell_icon"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="水井措施"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>



</LinearLayout>